h5 = show_title 'Depósito'
= form_for @transaction, url: deposits_path do |f|
  = f.hidden_field :operation, value: 'deposit'
  = show_error_message @transaction
  .input-prepend.input-append
    span.add-on = 'R$'
    = f.text_field :quantity, id: 'appendedPrependedInput', class: 'fix-input'
    = f.submit 'Depósito', class: 'btn btn-info'